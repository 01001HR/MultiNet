{
    "models": {
        "segmentation" : "../submodules/KittiSeg/hypes/kitti_fcn.json",
        "detection" : "../submodules/TensorDetect/hypes/kitti.json"
    },

    "model_list": ["segmentation", "detection"],

    "path": ["../incl", "../submodules/KittiSeg/incl", "../submodules/TensorDetect/incl/"],

    "logging": {
        "display_iter": 200,
        "eval_iter": 1000,
        "write_iter": 800,
        "save_iter": 10000,
        "image_iter": 600000
    },

    "selection": {
        "random": false,
        "use_weights": true,
        "weights": [1, 2]
    },

    "loss_build": {
        "recombine": true,
        "weighted": false,
        "rwdecay": false,
        "reweight": false,
        "rdweight": [0.5],
        "weights": [0.7, 2]
    },

    "solver": {
        "max_steps": 200000,
        "batch_size": 1
    }
}