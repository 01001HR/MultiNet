{
    "models": {
        "segmentation" : "../submodules/KittiSeg/hypes/kitti_fcn.json",
        "detection" : "../submodules/TensorDetect/hypes/kitti.json",
        "road" : "../submodules/road_classification/hypes/road.json"
    },

    "model_list": ["segmentation", "detection", "road"],

    "path": ["../incl", "../submodules/KittiSeg/incl", "../submodules/TensorDetect/incl/", "../submodules/road_classification/incl/"],

    "logging": {
        "display_iter": 200,
        "eval_iter": 1000,
        "write_iter": 1000,
        "save_iter": 10000,
        "image_iter": 600000
    },

    "selection": {
        "random": false,
        "use_weights": true,
        "weights": [1, 2, 0]
    },

    "loss_build": {
        "recombine": true,
        "weighted": false,
        "rwdecay": false,
        "fc_loss": false,
        "reweight": false,
        "reAdam": false,
        "rdweight": [0.5],
        "weights": [0.7, 2, 0.7]
    },

    "solver": {
        "max_steps": 200000,
        "batch_size": 1
    }
}